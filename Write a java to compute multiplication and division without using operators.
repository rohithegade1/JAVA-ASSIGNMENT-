package homework;

 public class Person {
         int id;
         String name;
         int  age;
         void cricket() {
                 System.out.println("The person play Cricket");
         }

 }

 package homework;

 public class PersonDemo {
         public static void main(String[] args) {
                 Person p1 = new Person();
                 p1.id = 1;
                 p1.name = "raj";
                 p1.age = 35;
                 p1.cricket();
                 System.out.println("The id of Person: " + p1.id);
                 System.out.println("The name of Person: " + p1.name);
                 System.out.println("The age of Person:" + p1.age);

                 Person p2 = new Person();
                 p2.id = 2;
                 p2.name = "Vaibhav";
                 p2.age = 19;
                 p1.cricket();
                 System.out.println("The id of Person: " + p2.id);
                 System.out.println("The name of Person: " + p2.name);
                 System.out.println("The age of Person:" + p2.age);

         }

 }
